<!-- Primary Meta Tags -->
{% set pageTitle = title + " | " + site.name if title and title != site.name else site.name %}
{% if site.tagline and not title %}
  {% set pageTitle = site.name + " - " + site.tagline %}
{% endif %}

<title>{{ pageTitle }}</title>
<meta name="title" content="{{ pageTitle }}">
<meta name="description" content="{{ description or site.description }}">
<meta name="keywords" content="{{ keywords or site.keywords }}">
<meta name="author" content="{{ author or site.author }}">

<!-- Canonical URL -->
<link rel="canonical" href="{{ site.url }}{{ page.url }}">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:title" content="{{ pageTitle }}">
<meta property="og:description" content="{{ description or site.description }}">
<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:locale" content="{{ site.locale or 'en_US' }}">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="{{ site.url }}{{ page.url }}">
<meta property="twitter:title" content="{{ pageTitle }}">
<meta property="twitter:description" content="{{ description or site.description }}">

{% if site.twitter %}
<meta property="twitter:site" content="@{{ site.twitter }}">
<meta property="twitter:creator" content="@{{ site.twitter }}">
{% endif %}

<!-- Additional Meta Tags -->
<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
<meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">

<!-- Favicons -->
<link rel="icon" type="image/x-icon" href="favicon.ico">
<link rel="icon" type="image/svg+xml" href="assets/images/weave-studio-logo.svg">
<link rel="apple-touch-icon" href="assets/images/weave-studio-logo.svg">
<meta name="theme-color" content="{{ themeColor or site.themeColor or '#2563eb' }}">
<meta name="msapplication-TileColor" content="#2563eb">

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title="{{ site.name }} RSS Feed" href="/feed.xml">

<!-- Structured Data (JSON-LD) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{ site.name }}",
  "url": "{{ site.url }}",
  "logo": "{{ site.url }}{{ site.logo }}",
  "description": "{{ site.description }}",
  "founder": {
    "@type": "Person",
    "name": "{{ site.author }}"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "IL"
  },
  "sameAs": [
    {% for social in site.social %}
    "{{ social.url }}"{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Web Design & Development Services",
    "itemListElement": [
      {% for service in site.services %}
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "{{ service }}",
          "description": "{{ service }} services for small businesses"
        }
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
}
</script>

<!-- WebSite Structured Data -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "{{ site.name }}",
  "url": "{{ site.url }}",
  "description": "{{ site.description }}",
  "inLanguage": "{{ site.language }}",
  "copyrightHolder": {
    "@type": "Organization",
    "name": "{{ site.name }}"
  }
}
</script>
