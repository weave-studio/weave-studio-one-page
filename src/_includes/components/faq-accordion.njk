<section class="faq-section" id="faq">
  <div class="container">
    <header class="section-header">
      <h2 data-faq-title>
        <span class="lang-content" data-lang="en">Frequently Asked Questions</span>
        <span class="lang-content" data-lang="he">שאלות נפוצות</span>
      </h2>
      <p data-faq-subtitle>
        <span class="lang-content" data-lang="en">Everything you need to know about our services</span>
        <span class="lang-content" data-lang="he">כל מה שאתם צריכים לדעת על השירותים שלנו</span>
      </p>
    </header>

    <div class="faq-accordion">
      {% for faq in collections.faqItems %}
        <div class="faq-item">
          <button class="faq-question"
                  aria-expanded="false"
                  aria-controls="faq-answer-{{ loop.index }}"
                  id="faq-question-{{ loop.index }}">
            <span class="faq-question-text" data-faq-question="{{ loop.index }}">
              <span class="lang-content" data-lang="en">{{ faq.data.question }}</span>
              <span class="lang-content" data-lang="he">{{ faq.data.question_he or faq.data.question }}</span>
            </span>
            <span class="faq-icon" aria-hidden="true">
              <svg class="faq-icon-plus" viewBox="0 0 24 24" width="20" height="20">
                <path d="M12 4v16m8-8H4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <svg class="faq-icon-minus" viewBox="0 0 24 24" width="20" height="20">
                <path d="M4 12h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </span>
          </button>

          <div class="faq-answer"
               id="faq-answer-{{ loop.index }}"
               aria-labelledby="faq-question-{{ loop.index }}">
            <div class="faq-answer-content" data-faq-answer="{{ loop.index }}">
              <div class="lang-content" data-lang="en">
                {{ faq.data.answer | md | safe }}
              </div>
              <div class="lang-content" data-lang="he">
                {{ faq.data.answer_he or faq.data.answer | md | safe }}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
