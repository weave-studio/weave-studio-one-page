---
layout: layouts/base.njk
---

<article class="case-study">
  <header class="case-study__header">
    <div class="container">
      <div class="case-study__meta">
        <span class="case-study__client">{{ client }}</span>
        {% if completion_date %}
          <time class="case-study__date">{{ completion_date | readableDate }}</time>
        {% endif %}
      </div>
      
      <h1 class="case-study__title">{{ title }}</h1>
      
      {% if description %}
        <p class="case-study__description">{{ description }}</p>
      {% endif %}
      
      {% if technologies %}
        <div class="case-study__technologies">
          <h3>Technologies Used:</h3>
          <div class="case-study__tech-list">
            {% for tech in technologies %}
              <span class="case-study__tech-item">{{ tech }}</span>
            {% endfor %}
          </div>
        </div>
      {% endif %}
      
      {% if project_url %}
        <div class="case-study__links">
          <a href="{{ project_url }}" 
             class="btn btn--primary" 
             target="_blank" 
             rel="noopener noreferrer">
            View Live Project
          </a>
        </div>
      {% endif %}
    </div>
  </header>

  {% if featured_image %}
    <div class="case-study__featured-image">
      <div class="container">
        {% image featured_image, featured_image_alt or title, "100vw", "eager" %}
      </div>
    </div>
  {% endif %}

  <div class="case-study__content">
    <div class="container">
      <div class="prose">
        {{ content | safe }}
      </div>
    </div>
  </div>

  <footer class="case-study__footer">
    <div class="container">
      <nav class="case-study__navigation">
        <a href="/case-studies/" class="btn btn--secondary">
          ‚Üê Back to Case Studies
        </a>
      </nav>
    </div>
  </footer>
</article>